{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "CommonJS",                     
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "strict": true,                           
    "noImplicitAny": true,                    
    "removeComments": true,                   
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,                     
    "resolveJsonModule": true,                
    "allowJs": true                           
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}  